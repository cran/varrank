citHeader("To cite `varrank` package in publication use:")


citEntry(entry = "Article",
  title        = "varrank: an R package for variable ranking based on mutual information with applications to observed systemic datasets",
  author       = personList(as.person("Gilles Kratzer"), as.person("Reinhard Furrer")),
  year         = "2018",
  journal      ="arXiv preprint arXiv:1804.07134",
  textVersion  =
  paste("Kratzer, G. and Furrer, R. (2018). varrank: an R package for variable ranking based on mutual information with applications to observed systemic datasets. datasets.arXiv preprint arXiv:1804.07134"),
)


citEntry(entry = "Manual",
    title = "varrank: an R package for variable ranking based on mutual information with applications to observed systemic datasets",
    author = personList(as.person("Gilles Kratzer"), as.person("Reinhard Furrer")),
    year = "2018",
    note = "R package version 0.3",
    url = "https://CRAN.R-project.org/package=varrank",
  textVersion  =
  paste("Kratzer, G. and Furrer, R. (2018). varrank: An R Package for Variable Ranking Based on Mutual Information with Applications to Systems Epidemiology. R package version 0.3.
  https://CRAN.R-project.org/package=varrank"),
)